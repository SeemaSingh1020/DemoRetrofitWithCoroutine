<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.neardoctor">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.neardoctor.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DemoRetrofitWithCoroutine"
        tools:targetApi="31">
        <activity
            android:name="com.neardoctor.view.EmergencyHelpActivity"
            android:exported="false" />
        <activity
            android:name="com.neardoctor.view.MedicalHistoryActivity"
            android:exported="false" />
        <activity
            android:name="com.neardoctor.view.NurseAtHomeListActivity"
            android:exported="false" />
        <activity
            android:name="com.neardoctor.view.DoctorAtHomeListActivity"
            android:exported="false" />
        <activity
            android:name="com.neardoctor.view.AmbulanceListActivity"
            android:exported="false" />
        <activity
            android:name="com.neardoctor.view.PharmacyListActivity"
            android:exported="false" />
        <activity
            android:name="com.neardoctor.view.HospitalsListActivity"
            android:exported="false" />
        <activity
            android:name="com.neardoctor.view.DoctorListActivity"
            android:exported="false" />
        <activity
            android:name="com.neardoctor.view.DashBoardActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DemoRetrofitWithCoroutine.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.neardoctor.view.MainActivity"
            android:exported="true">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
    </application>

</manifest>